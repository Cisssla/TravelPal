<Window x:Class="TravelPal.AddTravelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal"
        mc:Ignorable="d"
        Title="AddTravelWindow" Background="MintCream" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.RowSpan="2"
            VerticalContentAlignment="Top"
            Content="Add Travel"
            FontSize="35"
            FontFamily="Arial"
            Foreground="MediumSlateBlue"/>
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Content="Destination:"
            FontSize="20"/>
        <Label
            Grid.Row="3"
            Grid.Column="2"
            Content="Country:"
            FontSize="20"/>
        <Label
            Grid.Row="5"
            Grid.Column="1"
            Content="Travelers:"
            FontSize="20"/>
        <Label
            Grid.Row="5"
            Grid.Column="2"
            Content="Trip or Vacation:"
            FontSize="20"/>
        <Label
            x:Name="lblTripType"
            Grid.Row="7"
            Grid.Column="2"
            Content="Trip Type:"
            FontSize="20"
            Visibility="Hidden"/>
        <TextBox
            x:Name="txtDestination"
            Grid.Row="4"
            Grid.Column="1"
            Margin="5,0,0,0"
            />
        <TextBox
            x:Name="txtTravelers"
            Grid.Row="6"
            Grid.Column="1"
            Margin="5,0,0,0"
            />
        <ComboBox
            x:Name="cbxCountry"
            Grid.Row="4"
            Grid.Column="2"
            Margin="5,0,0,0" 
            FontSize="20"/>
        <ComboBox
            x:Name="cbxTripOrVacation"
            Grid.Row="6"
            Grid.Column="2"
            Margin="5,0,0,0" 
            SelectionChanged="ComboBox_SelectionChanged_1"
            FontSize="20"/>
        <ComboBox
            x:Name="cbxTripType"
            Grid.Row="8"
            Grid.Column="2"
            Margin="5,0,0,0" 
            FontSize="20"
            Visibility="Hidden"/>
        <CheckBox
            x:Name="chbAllInclusive"
            Grid.Column="1"
            Grid.Row="8"
            Content="All Inclusive"
            FontSize="20"
            Margin="5,5,0,0"
            Visibility="Hidden"
            />
        <Button
            x:Name="addButton"
            Grid.Column="2"
            Grid.Row="10"
            Grid.RowSpan="2"
            Height="40"
            Content="Add Travel"
            FontSize="25"
            Background="MediumSlateBlue"
            Foreground="MintCream" 
            Click="addButton_Click"/>

    </Grid>
</Window>
